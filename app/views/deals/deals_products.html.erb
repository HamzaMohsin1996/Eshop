<body class="c1">
          <%= bootstrap_form_for(Deal.new) do |f| %>
        <div class="container" id="para">
          <h3 align="center">Apply Discount:</h3>
           <div class="row">
              <div class="col-12">    
                <%= f.text_field :title ,placeholder: "Deal Name" %>
              </div>
            <div class="col-12">    
                <%= f.text_field :description,placeholder: "Deal Description" %>
              </div>
              <div  class="col-12">
              <%= f.number_field :discount_price, placeholder: "Apply Discount" %>
            </div>
              <div class="col-12">
              <%= f.submit "Create",class: "btn btn-success" %>
            </div>
          </div>
      </div>
        <% end %>
</body>
<script type="text/javascript">

              $("#btn_").on('click', function () {
                  var checkbox_value = [];
                  $(":checkbox").each(function () {
                      var ischecked = $(this).is(":checked");
                      if (ischecked) {
                          checkbox_value.push($(this).val())
                      }
                  });

                 send_productIds(checkbox_value)
              });

              function send_productIds(productIds){
                 $.ajax({
                  type: "GET",
                  url:"/deals/deals_products",
                  data: {product_ids: productIds}
                });
                 alert(productIds);
              }

</script>
        