      <div class="container">   
          <h2 align="center">Todays deals:</h2>  
            <table class="table table-hover">
              <thead class="thead" align="center">
                <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Price</th>
                  <th>Discount Price</th>
                  <th>Delete</th>
                </tr>

              </thead>
            
              <tbody>
                <% @dealPs.each do |deal|%>
                <tr align="center">         
                  <td><%= deal.title %></td>
                  <td><%= deal.description%></td>
                  <td><%= deal.price%></td>
                  <td><%= deal.discount_price%></td>
                  <td> <%= button_to 'Delete', deal_path(deal),method: :delete,data: { confirm: 'Are you sure?' },class: 'btn btn-info'%></td>
                </tr>
                <%end%>
              </tbody>
            </table>
