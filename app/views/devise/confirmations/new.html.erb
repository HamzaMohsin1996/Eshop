<h2>Resend confirmation instructions</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <div class="container" id="para">
           <div class="row">
              <div class="col-12">    
                <%= f.email_field :email, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email)%>
              </div>
           
              <div class="col-12 actions">
              <%= f.submit "Resend confirmation instructions",class: "btn btn-success" %>
            </div>
          </div>
      
        <% end %>
<%= render "devise/shared/links" %>

